<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="NewsBaseInfoView">
        <attr name="news_source" format="string|reference" />
        <attr name="news_popularity" format="string|reference" />
        <attr name="news_time" format="string|reference" />
        <attr name="news_lable" format="string|reference" />
        <attr name="news_dislike_visibility">
            <enum name="visible" value="0" />
            <enum name="invisible" value="1" />
            <enum name="gone" value="2" />
        </attr>
    </declare-styleable>


    <declare-styleable name="NamedSpinner">
        <attr name="name" format="string|reference" />
        <attr name="textAppearance" format="reference" />
        <attr name="entries" format="reference" />
    </declare-styleable>

    <declare-styleable name="CollapsibleTextView">
        <attr name="suffixColor" format="color" />
        <attr name="collapsedLines" format="integer" />
        <attr name="collapsedText" format="string" />
        <attr name="expandedText" format="string" />
        <attr name="suffixTrigger" format="boolean" />
        <attr name="min_collapse_lines" format="integer|reference" />
        <attr name="collapsed_line_space" format="dimension|reference" />
        <attr name="expanded_line_space" format="dimension|reference" />
        <attr name="suffixRelativeSize" format="fraction" />
        <attr name="suffixBoldText" format="boolean|reference" />
        <attr name="showHideSuffix" format="boolean|reference" />
        <attr name="doAnimator" format="boolean|reference" />
        <attr name="suffixDrawableOpen" format="reference" />
        <attr name="suffixDrawableClose" format="reference" />

        <attr name="extendText" format="string"/>
        <attr name="extendTextSize" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="PlumbTextView">
        <attr name="text" format="string|reference" />
        <attr name="textColor" format="color|reference" />
        <attr name="textSize" format="dimension|reference" />
        <attr name="letterSpacing" format="dimension|reference" />
        <attr name="columnSpacing" format="dimension|reference" />
        <attr name="regex" format="string|reference" />
        <attr name="arrangeDirection">
            <flag name="leftToRight" value="0" />
            <flag name="rightToLeft" value="1" />
        </attr>
        <attr name="textStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>
        <attr name="leftLine" format="boolean" />
        <attr name="leftLinePadding" format="dimension|reference" />
        <attr name="leftLineColor" format="color|reference" />
    </declare-styleable>

</resources>
